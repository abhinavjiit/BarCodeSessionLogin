<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BarCodeScanner"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:text="Running Time :"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Chronometer
        android:id="@+id/noteChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_toEndOf="@id/tvTimer"
        android:layout_toRightOf="@id/tvTimer"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="#222222"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locationId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTimer"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/locationDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationId"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/pricePerMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationDetail"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

</RelativeLayout>